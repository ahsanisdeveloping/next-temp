{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,                // ðŸ”¹ Disable strict mode (was true)
    "noImplicitAny": false,          // ðŸ”¹ Allow variables without explicit types
    "noImplicitReturns": false,      // ðŸ”¹ Allow functions without explicit return values
    "noImplicitThis": false,         // ðŸ”¹ Allow 'this' in any function
    "noUnusedLocals": false,         // ðŸ”¹ Ignore unused local variables
    "noUnusedParameters": false,     // ðŸ”¹ Ignore unused function parameters
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
